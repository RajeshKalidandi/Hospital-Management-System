{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./functions",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["functions/**/*", "src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
} 